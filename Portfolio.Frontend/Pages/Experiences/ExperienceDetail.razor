<div class="container">
    <div class="row">

        @if(Experience.HasImage){
            <div class="col-lg-8 col-md-8 col-12">
                <p>
                    @Experience.Description
                </p>

            </div>

            <div class="col-lg-4 col-md-4 col-12">
                <p>
                    <img class="img-fluid rounded hover-overlay" src="/img/experiences/@Experience.ImageName" alt="">
                </p>
                <TagDetails Tags="@Experience.Tags" />

            </div>
        }
        else{
            <div class="col-12">
                <p>
                    @Experience.Description
                </p>
                <TagDetails Tags="@Experience.Tags" />

            </div>
        }
    </div>
</div>



@code {
    [Parameter]
    public ExperienceViewModel Experience { get; set; } = null!;

}
